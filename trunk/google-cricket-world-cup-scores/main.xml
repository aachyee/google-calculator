            <label height="16" name="status" width="121" x="40" y="19" bold="true"
              color="#FFFFFF" font="Arial"/>
        </div>
        <label height="27" name="matchstatus" width="168" x="10" y="168" bold="true"
          color="#FFFFFF" font="Arial" size="8" wordwrap="true"
         />
        <a height="16" name="sc" width="162" x="10" y="192" onclick="showMatchFullScore(0)"
